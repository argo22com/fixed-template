{% comment %}
    Renders a list of product's price (regular, sale)

    Accepts:
    - product: {Object} Product Liquid object (optional)
    - use_variant: {Boolean} Renders selected or first variant price instead of overall product pricing (optional)
    - show_badges: {Boolean} Renders 'Sale' and 'Sold Out' tags if the product matches the condition (optional)
    - show_in_card: {Boolean} Detect the price is shown in a product card or details page
    - price_class: {String} Adds a price class to the price element (optional)

    Usage:
    {% render 'price', product: product %}
{% endcomment %}
{%- liquid
  if use_variant
    assign target = product.selected_or_first_available_variant
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign available = target.available | default: false
  assign money_price = price | money
  if settings.currency_code_enabled
    assign money_price = price | money_with_currency
  endif

  if target == product and product.price_varies
    assign money_price = 'products.product.price.from_price_html' | t: price: money_price
  endif

  # ----------------------------
  # Display ceny & sleva (%)
  # ----------------------------
  # VAT multiplikátor pro aktuální trh (fallback = 1)
  assign vat_multiplier = 1
  assign mo = shop.metaobjects.vat_rates_by_country[ localization.country.iso_code ]
  if mo and mo.price_multiplier and mo.price_multiplier.value
    assign vat_multiplier = mo.price_multiplier.value
  endif

  # nativní ceny v centech
  assign current_cents  = target.price
  assign original_cents = target.compare_at_price | default: 0

  # display ceny (stejná báze jako hlavní zobrazená cena)
  # - pokud máš "Include tax in prices" zapnuté, nenasobuj (Shopify už vrací vč. DPH)
  assign current_display_cents  = current_cents
  assign original_display_cents = original_cents
  unless shop.taxes_included
    assign current_display_cents  = current_cents  | times: vat_multiplier | round: 0
    assign original_display_cents = original_cents | times: vat_multiplier | round: 0
  endunless

  # procento slevy z display cen
  assign discount_pct = 0
  if original_display_cents > current_display_cents and original_display_cents > 0
    assign discount_pct = original_display_cents | minus: current_display_cents | times: 100.0 | divided_by: original_display_cents | round: 0
  endif

  # (legacy) CZ metafield pro cenu s DPH varianta — pokud ho ještě používáš jinde
  assign price_with_vat = product.selected_or_first_available_variant.metafields.product_texts.price_with_vat
-%}

{% if show_in_card %}
  {%- render 'price-with-vat', price: product.selected_or_first_available_variant.price , variant_vat_metafield: price_with_vat -%}
{% else %}
  {%- render 'price-with-vat', price: product.selected_or_first_available_variant.price , variant_vat_metafield: price_with_vat -%}

  <{% unless use_custom_element %}div{% else %}product-price{% endunless %} class="price
    {%- if price_class %} {{ price_class }}{% endif -%}
    {%- if available == false %} price--sold-out {% endif -%}
    {%- if compare_at_price > price %} price--on-sale {% endif -%}
    {%- if product.price_varies == false and product.compare_at_price_varies %} price--no-compare{% endif %}
    {%- if show_in_card %} price--in-card{% endif %}
    {%- if show_badges and settings.sale_badge_label != 'none' %} price--show-badge{% endif %}{% unless show_in_card %} price--out-card{% endunless %}">
    <div class="price__container{% if compare_at_price > price and show_in_card %} break{% endif %}">
      {%- comment -%}
        Explanation of description list:
          - div.price__regular: Displayed when there are no variants on sale
          - div.price__sale: Displayed when a variant is a sale
      {%- endcomment -%}
      <div class="price__regular">
        <span class="visually-hidden visually-hidden--inline">{{ 'products.product.price.regular_price' | t }}</span>
        <span class="price-item price-item--regular">
          {{ money_price }}
        </span>
        <span class="price__vat__note"> {{ 'products.product.price.price_without_vat' | t }} </span>
      </div>

      <div class="price__sale{% if show_in_card %} flex-column{% endif %}">
        {%- unless product.price_varies == false and product.compare_at_price_varies %}
          <span class="visually-hidden visually-hidden--inline">{{ 'products.product.price.regular_price' | t }}</span>
          <span class="flex align-center">
            <s class="price-item price-item--regular">
              {% if settings.currency_code_enabled %}
                {{ compare_at_price | money_with_currency }}
              {% else %}
                {{ compare_at_price | money }}
              {% endif %}
            </s>

            {%- if show_badges and show_in_card and discount_pct > 0 and settings.sale_badge_label != 'none' -%}
              <span class="price__badge price__badge--in-card lh1 color-foreground">
                {%- if settings.sale_badge_label == 'text' -%}
                  {{ 'products.product.on_sale' | t }}
                {%- elsif settings.sale_badge_label == 'percent' -%}
                  -{{ discount_pct }}%
                {%- else -%}
                  {%- if settings.currency_code_enabled -%}
                    -{{ original_display_cents | minus: current_display_cents | money_with_currency }}
                  {%- else -%}
                    -{{ original_display_cents | minus: current_display_cents | money }}
                  {%- endif -%}
                {%- endif -%}
              </span>
            {%- endif -%}
          </span>
        {%- endunless -%}

        <span class="visually-hidden visually-hidden--inline">{{ 'products.product.price.sale_price' | t }}</span>
        <span class="price-item price-item--sale price-item--last{% if show_in_card %} price-item--sale-in-card{% endif %}">
          {{ money_price }}
        </span>
      </div>

      {%- unless show_in_card and product.selected_or_first_available_variant.unit_price_measurement == nil -%}
      <small class="unit-price caption{% if product.selected_or_first_available_variant.unit_price_measurement == nil %} hidden{% endif %}">
        <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
        <span class="price-item price-item--last">
          <span>{{- product.selected_or_first_available_variant.unit_price | money -}}</span>
          <span aria-hidden="true">/</span>
          <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
          <span>
            {%- if product.selected_or_first_available_variant.unit_price_measurement.reference_value != 1 -%}
              {{- product.selected_or_first_available_variant.unit_price_measurement.reference_value -}}
            {%- endif -%}
            {{ product.selected_or_first_available_variant.unit_price_measurement.reference_unit }}
          </span>
        </span>
      </small>
      {%- endunless -%}
    </div>

    {%- if show_badges and show_in_card == false and discount_pct > 0 and settings.sale_badge_label != 'none' -%}
      <span class="price__badge lh1 color-foreground">
        {%- if settings.sale_badge_label == 'text' -%}
          {{ 'products.product.on_sale' | t }}
        {%- elsif settings.sale_badge_label == 'percent' -%}
          -{{ discount_pct }}%
        {%- else -%}
          {%- if settings.currency_code_enabled -%}
            -{{ original_display_cents | minus: current_display_cents | money_with_currency }}
          {%- else -%}
            -{{ original_display_cents | minus: current_display_cents | money }}
          {%- endif -%}
        {%- endif -%}
      </span>
    {%- endif -%}
  </{% unless use_custom_element %}div{% else %}product-price{% endunless %}>
{% endif %}
